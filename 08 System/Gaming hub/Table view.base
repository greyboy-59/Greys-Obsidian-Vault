formulas:
  Status: |-
    if(Platinum == true, "Platinum",
    if(Completed == true, "Completed",
    if(note["In progress"] == true, "In progress",
    if(Owned == true, "Ready to start",
    "Not started"
    ))))
  Untitled: ""
properties:
  file.name:
    displayName: Name
  note.banner:
    displayName: Banner
  note.platform:
    displayName: Platform
  note.developer:
    displayName: Developer
views:
  - type: table
    name: Table
    filters:
      and:
        - file.inFolder("02 Hobbies/Games")
    order:
      - Banner
      - file.name
      - Developer
      - formula.Status
      - Owned
      - In progress
      - Completed
      - Platinum
      - Platform
    sort:
      - property: developers
        direction: DESC
      - property: platform
        direction: ASC
      - property: formula.Untitled 2
        direction: DESC
    columnSize:
      note.Banner: 169
      file.name: 253
      formula.Status: 157
      note.Developer: 250
      note.Owned: 105
      note.In progress: 113
      note.Completed: 118
      note.Platinum: 119
      note.Platform: 143
      formula.Untitled: 118
